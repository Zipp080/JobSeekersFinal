@model JobSeekersFinal.Models.Applicant

@{
    ViewBag.Title = "ApplicantProfile";
}

<h2></h2>
<html lang="en">

<head>
    <title>JobSeekers - Profile</title>
    <link href="~/Content/profile.css" rel="stylesheet">
    <script type="text/javascript" src="~/Scripts/jquery-latest.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.tablesorter.js"></script> 
</head>

<body>
    <h1> Welcome, Eric!</h1>
    @*Top Nav Bar*@


    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">JobSeekers</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">My Profile</a></li>
                    <li><a href="#">Help</a></li>
                    <li><a href="mailto:webmaster@jobseekers.com">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="applicantpersonal">
        <ul class="personal">
            Personal Information
            <li>Name: @Model.FirstName @Model.MiddleName @Model.LastName</li>
            <li>Address: @Model.Address</li>
            <li>City: @Model.City</li>
            <li>State: @Model.State</li>
            <li>Zip: @Model.Zip</li>
            <li>Phone: @Model.Phone</li>
            <li>Email: @Model.Email</li>
            <li>Title: @Model.DesiredPositions</li>
            <li>Skills: @Model.Skills</li>

        </ul>
    </div>


    <br />
    <br />
    
<div class="thumbnail">
    <a href="resume.docx" download>
        <img src="~/img/dlbutton.png" />
    </a>
    <div class="caption post-content">
        <h3 style="color:white; font-size:medium">Download Resume</h3>
    </div>
</div>
        
</body>
</html>


